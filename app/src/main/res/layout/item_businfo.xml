<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="@dimen/bus_name_text_size"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_direction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_time" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="@dimen/bus_sub_text_size"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:layout_constraintStart_toEndOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_direction"
        android:layout_width="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:text="Direction"
        android:textSize="@dimen/bus_sub_text_size"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintBottom_toTopOf="@id/tv_before"
        app:layout_constraintStart_toStartOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_before"
        android:layout_width="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:text="Before"
        android:textSize="@dimen/item_sub_text_size"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_direction"
        app:layout_constraintBottom_toTopOf="@id/tv_after"
        app:layout_constraintStart_toStartOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_after"
        android:layout_width="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:text="After"
        android:textSize="@dimen/bus_sub_text_size"
        app:layout_constraintTop_toBottomOf="@id/tv_before"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_name" />

</androidx.constraintlayout.widget.ConstraintLayout>